{
  "name": "@wakra-project/wakra-project",
  "description": "Project Management System",
  "private": true,
  "repository": "https://github.com/rem029/wakra-project",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "kill-ports": "kill-port --port 3030 && kill-port --port 6060",
    "bootstrap": "lerna bootstrap",
    "start": "yarn kill-ports && lerna run start --parallel --scope @wakra-project/*",
    "eslint": "lerna eslint",
    "wizard": "lerna-wizard",
    "generate-changelog": "lerna-changelog"
  },
  "devDependencies": {
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lerna-wizard": "^1.1.1"
  },
  "changelog": {
    "labels": {
      "feature": "New Features",
      "fix": "Bug Fix",
      "tech": "Tech"
    }
  }
}
