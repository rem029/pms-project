{
  "name": "@wakra-project/wakra-project",
  "description": "Project Management System",
  "private": true,
  "repository": "https://github.com/rem029/wakra-project",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "kill-ports": "kill-port --port 3030 && kill-port --port 6060",
    "bootstrap": "lerna bootstrap",
    "start": "yarn kill-ports && lerna run start --parallel --scope @wakra-project/*",
    "start:staging": "lerna run start --parallel --scope @wakra-project/backend --scope @wakra-project/common",
    "start:pm2:staging": "pm2 start server.sh --interpreter=bash --name=pm-app-staging",
    "build": "yarn kill-ports && lerna run build --parallel --scope @wakra-project/*",
    "build:frontend": "yarn kill-ports && lerna run build:staging --scope @wakra-project/frontend",
    "eslint": "lerna eslint"
  },
  "devDependencies": {
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lerna-wizard": "^1.1.1"
  },
  "changelog": {
    "labels": {
      "feature": "New Feature",
      "fix": "Bug Fix",
      "tech": "Tech"
    }
  },
  "version": "0.0.0"
}
